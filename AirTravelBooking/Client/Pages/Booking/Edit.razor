@page "/Bookings/edit/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3>Edit Booking</h3>

<FormComponent ButtonText="Update" OnValidSubmit="EditBooking" booking="booking" />

@code {
    [Parameter] public int id { get; set; }
    Booking booking = new Booking();

    protected async override Task OnParametersSetAsync()
    {
        booking = await _client.GetFromJsonAsync<Booking>($"{EndPoints.PrioritiesEndPoint}/{id}");
    }

    async Task EditBooking()
    {
        await _client.PutAsJsonAsync($"{EndPoints.PrioritiesEndPoint}/{id}", booking);
        _navManager.NavigateTo("/Booking/");
    }

}
