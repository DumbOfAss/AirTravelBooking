<EditForm Model="@airplane" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Airplane Name: </label>
            <div>
                <InputText @bind-Value="@airplane.Model" class="form-control" />
                <ValidationMessage For="@(() => airplane.Model)" />
            </div>
        </div>

        <div class="form-group">
            <label>Airplane Price: </label>
            <div>
                <InputText @bind-Value="airplane.Manufacturer" class="form-control" />
                <ValidationMessage For="@(() => airplane.Manufacturer)" />
            </div>
        </div>

        <div class="form-group">
            <label>Airplane Name: </label>
            <div>
                <InputText @bind-Value="@airplane.Operator" class="form-control" />
                <ValidationMessage For="@(() => airplane.Operator)" />
            </div>
        </div>
        </fieldset>
        @if (!Disabled)
        {
            <button type="submit" class="btn btn-success btn-block">
                Create Airplane
            </button>
        }
        <AirTravelBooking.Client.Components.BackToList Target="features" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Airplane airplane { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
