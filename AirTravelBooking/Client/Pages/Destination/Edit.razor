@page "/Destinations/edit/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3>Edit Destination</h3>

<FormComponent ButtonText="Update" OnValidSubmit="EditDestination" destination="destination" />

@code {
    [Parameter] public int id { get; set; }
    Destination destination = new Destination();

    protected async override Task OnParametersSetAsync()
    {
        destination = await _client.GetFromJsonAsync<Destination>($"{EndPoints.PrioritiesEndPoint}/{id}");
    }

    async Task EditDestination()
    {
        await _client.PutAsJsonAsync($"{EndPoints.DestinationsEndPoint}/{id}", destination);
        _navManager.NavigateTo("/Destinations/");
    }

}
