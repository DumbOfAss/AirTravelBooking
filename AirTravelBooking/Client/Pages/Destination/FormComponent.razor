<EditForm Model="@destination" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled ="@Disabled">
    <div class="form-group">
        <label>Destination Name: </label>
        <div>
            <InputText @bind-Value="@destination.Name" class="form-control" />
            <ValidationMessage For="@(() => destination.Name)" />
        </div>
    </div>

    <div class="form-group">
        <label>Destination Distance: </label>
        <div>
            <InputNumber @bind-Value="@destination.Distance" class="form-control" />
            <ValidationMessage For="@(() => destination.Distance)" />
        </div>
    </div>
    </fieldset>
    @if(!Disabled)
    {
    <button type="submit" class="btn btn-success btn-block">
        Create Destination
    </button>
    }
    <AirTravelBooking.Client.Components.BackToList Target="features" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Destination destination { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
